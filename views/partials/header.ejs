      </div>
    </a>
    
    <div class="headerUtilities">
      <div class="userLoginDiv">
        <% if(!currentUser) { %> 
          <div class="signedOut">
            <a href="/login">
              <i class="fas fa-user-circle"></i>
              Login
            </a>
          </div>
          <div class="signedOut">
            <a href="/register">
              <i class="fab fa-wpforms"></i>
              Register
            </a>
          </div>
        <% } else { %>
          <div class="signedIn">
            <a href="/logout">
              <i class="fas fa-sign-out-alt"></i>
              Log Out
            </a>
          </div>
          <div class="signedIn">
            <a href="#">
              <i class="fas fa-user-circle"></i>
              Profile
            </a>
          </div>
          <div class="signedIn">
            <a href="#">
              <i class="fas fa-cog"></i>
              Settings
            </a>
          </div>
        <% } %>
      </div>
      <div class="socialMedia">
        <a href="#" class="smcontainer">
          <img src="/icons/social-media-logos/svg/008-twitter.svg" class="socialMediaIcon">
