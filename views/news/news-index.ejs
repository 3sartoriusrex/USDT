<% include ../partials/header %>

<section>

<h2>All Articles</h2>

<% news.slice().reverse().forEach( function(news){ %>

<div class="articleContainer">

  <div class="coverImageContainer">
    <img src="./<%=news.coverImage%>" alt="">
  </div>

  <div class="textContainer">
    <h3><u><%=news.title%></u></h3>
    <h4><%=news.subtitle%></h4>
    <p>By <em><%=news.author%></em></p>
    <p><%=moment(news.dateCreated).format('YYYY-MM-DD')%></p>
  </div>

</div>

<% }) %>

</section>

<% include ../partials/footer %>